---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<main
		class="min-h-screen flex items-center justify-center relative overflow-hidden"
		style="background-color: #0B0F14;"
	>
		<!-- Animated background elements -->
		<div class="absolute inset-0 bg-gradient-animate"></div>
		<div class="absolute inset-0 opacity-20">
			<div
				class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full mix-blend-normal filter blur-xl animate-blob"
				style="background-color: #42D392;"
			>
			</div>
			<div
				class="absolute top-1/3 right-1/4 w-96 h-96 rounded-full mix-blend-normal filter blur-xl animate-blob animation-delay-2000"
				style="background-color: #5FE3A1;"
			>
			</div>
			<div
				class="absolute bottom-1/4 left-1/3 w-96 h-96 rounded-full mix-blend-normal filter blur-xl animate-blob animation-delay-4000"
				style="background-color: #121821;"
			>
			</div>
		</div>

		<!-- Content -->
		<div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
			<div class="animate-fade-in-up">
				<h1
					class="text-5xl md:text-7xl font-bold mb-6 leading-tight"
					style="color: #E6EDF3;"
				>
					Soluciones digitales
					<span
						class="block"
						style="color: #42D392;"
						>para tu negocio</span
					>
				</h1>
			</div>

			<div class="animate-fade-in-up animation-delay-500">
				<p
					class="text-xl md:text-2xl mb-8 font-light max-w-2xl mx-auto leading-relaxed"
					style="color: #9AA4B2;"
				>
					Transformamos procesos complejos en sistemas digitales
					claros que impulsan el crecimiento de negocios pequeños.
				</p>
			</div>

			<div class="animate-fade-in-up animation-delay-1000">
				<p
					class="text-lg font-medium tracking-wide mb-16"
					style="color: #5FE3A1;"
				>
					PRÓXIMAMENTE
				</p>
			</div>

			<div class="animate-fade-in-up animation-delay-1500">
				<footer
					class="text-sm font-light"
					style="color: #9AA4B2;"
				>
					— Ale Celis
				</footer>
			</div>
		</div>
	</main>
</Layout>

<style>
	@keyframes fade-in-up {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes blob {
		0% {
			transform: translate(0px, 0px) scale(1);
		}
		33% {
			transform: translate(30px, -50px) scale(1.1);
		}
		66% {
			transform: translate(-20px, 20px) scale(0.9);
		}
		100% {
			transform: translate(0px, 0px) scale(1);
		}
	}

	@keyframes gradient-shift {
		0%,
		100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	.animate-fade-in-up {
		animation: fade-in-up 0.8s ease-out forwards;
	}

	.animate-blob {
		animation: blob 7s infinite;
	}

	.animation-delay-500 {
		animation-delay: 0.5s;
		opacity: 0;
	}

	.animation-delay-1000 {
		animation-delay: 1s;
		opacity: 0;
	}

	.animation-delay-1500 {
		animation-delay: 1.5s;
		opacity: 0;
	}

	.animation-delay-2000 {
		animation-delay: 2s;
	}

	.animation-delay-4000 {
		animation-delay: 4s;
	}

	.bg-gradient-animate {
		background: linear-gradient(-45deg, #0b0f14, #121821, #0b0f14, #121821);
		background-size: 400% 400%;
		animation: gradient-shift 15s ease infinite;
	}
</style>
